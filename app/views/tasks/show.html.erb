<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<%= form_for @task do |f| %>
  <div>
    <%= f.check_box :completed %>
    <% if @task.completed %>
    <p>Cette tâche est terminée.</p>
    <% else %>
    <p>Cette tâche n'est pas encore finie.</p>
    <% end %>
    <%= link_to "Edit", edit_task_path(@task) %> |
    <%= link_to 'Back to list', tasks_path %> |
    <%= link_to "Delete",
    task_path(@task),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
    %>
  </div>
<% end %>
